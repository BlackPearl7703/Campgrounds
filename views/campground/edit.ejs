<div class="row mb-3">
    <h1 class="text-center">Edit Campground</h1>

    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=camp.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label"  for="location">Location</label>
            <input class="form-control"  type="text" name="campground[location]" id="campground[location]" value="<%=camp.location%>">
        </div>
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input  class="form-control" type="text" name="campground[title]" id="campground[title] "value="<%=camp.title%> " >
        </div>

        <div class="input-group mb-3">
            <input type="file" class="form-control" name="image" id="inputGroupFile02">
            <label class="input-group-text" for="inputGroupFile02">Add Images</label>
          </div>


        <!-- <div class="mb-3">
            
           <input type="file" name="image" id="image" multiple>
        </div> -->
        <div class="mb-3">
            <label class="form-label" for="price">Price</label>
            <input  class="form-control" type="text" name="campground[price]" id="campground[price]" value="<%=camp.price%>">
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea  class="form-control" type="text" name="campground[description]" id="campground[description]"><%=camp.description%></textarea>
        </div>


        <div class="mb-3">
            <%camp.images.forEach(function (img,i) { %>
          <img src="<%=img.url %>" alt=""  width="400px">

          <div class="form-check-inline"> 
            <input type="checkbox" id="image-<%=i%> " name="deleteImages[]" value="<%=img.path %>">

          </div>

          <label for="image-<%=i%>" >Delete?</label>
                <%})%>
        </div>
        <button class="btn btn-success">>edit camp</button>
    
    </form>
    <!-- <a href="/campgr"></a> -->

    </div>
</div>
 

    
